@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<FluentSpacer />
<CascadingAuthenticationState>
    <AuthorizeView>
        <NotAuthorized>
            <LoginButtonMate @rendermode=InteractiveServer
                             ButtonText=" Google Sign In"
                             NavigateTo="/api/auth/login"
                             ProviderName="Google"
                             IconValue="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Filled.Size16.LockClosed())" />
        </NotAuthorized>
        <Authorized>
            <ConnectionManager ></ConnectionManager>
            @* <AuthCode @rendermode=InteractiveServer></AuthCode> *@
        </Authorized>
    </AuthorizeView>

</CascadingAuthenticationState>

